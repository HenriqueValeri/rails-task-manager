<h1>My Tasks</h1>

<h3> <%= @task.title %> </h3>
<p><%= @task.details %></p>
<p><%= @task.completed ? "Status: Completed" : "Status: Not completed" %></p>

<%= link_to "Delete", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<br>
<%= link_to "Edit", edit_task_path %>
<br>
<%= link_to "Back to tasks", tasks_path %>
